<link rel="stylesheet" href="/css/home.css">

<div id="home-container">
    <section id="message">
        <h1>Message</h1>
        <%- include('_chat_box'); -%>
    </section>
    <section id="feed-posts">
        <% if(locals.user){ %>
            <div id="new-post-container">
                <h1>Post Your Thought</h1>
        <form action="/post/create" id="new-post-form" method="POST">
            <textarea name="content" cols="30" rows="3" placeholder="Type here ..." required></textarea>
            <button type="submit">Post</button>
        </form></div>
        <% } %>

        <div id="post-list-container">
            <h1>Posts <i class="fas fa-angle-down"></i></h1>
            <ul>
                <% for(post of posts){%>
                    <%- include('_post'); -%>
                    <%}%>
            </ul>
        </div>
        
    </section>
    <section id="user-friends">
        <h1>Friends <i class="fas fa-angle-down"></i></h1>
        <%for(u of all_users){%>
            <p>
                <a href="/users/profile/<%=u.id%>"><i class="fas fa-user-circle"></i> <%=u.name%></a>
            </p>
            <%}%>
    </section> 
</div>

<script src="js/toggle_likes.js"></script>
<script>
    $('.toggle-like-button').each(function(){
        let self =  this;
        let toggleLike = new toggleLike(self);
    });
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.1/socket.io.js"></script>
<script src="/js/chat_engine.js"></script>
<% if(locals.user){ %>
<script>
    new ChatEngine('user-chat-box', '<%= locals.user.email %>')
</script>
<% } %>